<html>
	<body>
		<div class="erros">
			<%if(errosValidacao){%>
				<ul>
					<%for(i in errosValidacao){%>
						<li><%=errosValidacao[i].param%> - <%=errosValidacao[i].msg%></li>
					<%}%>
				</ul>
			<%}%>
		</div>
		<form action="/produtos/salva" method="post">
			<div>
				<label for="titulo">Titulo</label><br>
				<input type="text" name="titulo" value="<%=produto.titulo%>" placeholder="Coloque o titulo do livro"/>
			</div>
			<div>
				<label for="preco">Preço</label><br>
				<input type="text" name="preco" value="<%=produto.preco%>" placeholder="Coloque o preço do livro"/>
			</div>
			<div>
				<label for="descricao">Descrição</label><br>
				<textarea cols="20" rows="10" name="descricao" placeholder="Coloque a descrição do livro"><%=produto.descricao%></textarea>
			</div>
			<input type="submit" value="gravar"/>
		</form>
	</body>
</html>